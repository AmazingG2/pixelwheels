<?xml version="1.0"?>
<gdxui>
    <AnchorGroup id="root" gridSize="20">
        <Table id="scrollableTable"
            topCenter="root.topCenter 0 -0.5"
            width="650"
            height="300"/>

        <Menu id="menu" width="200" topCenter="scrollableTable.bottomCenter 0 0">
            <Items>
                <ButtonMenuItem id="continueButton" text="Continue"/>
                <Ifdef var="showRestartButton">
                    <ButtonMenuItem id="restartButton" text="Restart"/>
                </Ifdef>
            </Items>
        </Menu>
    </AnchorGroup>
</gdxui>
